@article{Xu11350,
	author = {Xu, Chi and Kohler, Timothy A. and Lenton, Timothy M. and Svenning, Jens-Christian and Scheffer, Marten},
	title = {Future of the human climate niche},
	volume = {117},
	number = {21},
	pages = {11350--11355},
	year = {2020},
	doi = {10.1073/pnas.1910114117},
	publisher = {National Academy of Sciences},
	abstract = {We show that for thousands of years, humans have concentrated in a surprisingly narrow subset of Earth{\textquoteright}s available climates, characterized by mean annual temperatures around \~{}13 {\textdegree}C. This distribution likely reflects a human temperature niche related to fundamental constraints. We demonstrate that depending on scenarios of population growth and warming, over the coming 50 y, 1 to 3 billion people are projected to be left outside the climate conditions that have served humanity well over the past 6,000 y. Absent climate mitigation or migration, a substantial part of humanity will be exposed to mean annual temperatures warmer than nearly anywhere today.All species have an environmental niche, and despite technological advances, humans are unlikely to be an exception. Here, we demonstrate that for millennia, human populations have resided in the same narrow part of the climatic envelope available on the globe, characterized by a major mode around \~{}11 {\textdegree}C to 15 {\textdegree}C mean annual temperature (MAT). Supporting the fundamental nature of this temperature niche, current production of crops and livestock is largely limited to the same conditions, and the same optimum has been found for agricultural and nonagricultural economic output of countries through analyses of year-to-year variation. We show that in a business-as-usual climate change scenario, the geographical position of this temperature niche is projected to shift more over the coming 50 y than it has moved since 6000 BP. Populations will not simply track the shifting climate, as adaptation in situ may address some of the challenges, and many other factors affect decisions to migrate. Nevertheless, in the absence of migration, one third of the global population is projected to experience a MAT \&gt;29 {\textdegree}C currently found in only 0.8\% of the Earth{\textquoteright}s land surface, mostly concentrated in the Sahara. As the potentially most affected regions are among the poorest in the world, where adaptive capacity is low, enhancing human development in those areas should be a priority alongside climate mitigation.},
	issn = {0027-8424},
	URL = {https://www.pnas.org/content/117/21/11350},
	eprint = {https://www.pnas.org/content/117/21/11350.full.pdf},
	journal = {Proceedings of the National Academy of Sciences},
	file={Biblio/DomainSpecific/Sustainability/11350.full.pdf}
}



