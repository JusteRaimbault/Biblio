@article{Brauman32799,
	author = {Brauman, Kate A. and Garibaldi, Lucas A. and Polasky, Stephen and Aumeeruddy-Thomas, Yildiz and Brancalion, Pedro H. S. and DeClerck, Fabrice and Jacob, Ute and Mastrangelo, Matias Enrique and Nkongolo, Nsalambi V. and Palang, Hannes and P{\'e}rez-M{\'e}ndez, N{\'e}stor and Shannon, Lynne J. and Shrestha, Uttam Babu and Strombom, Evelyn and Verma, Madhu},
