@article{Morales-Castilla2864,
	author = {Morales-Castilla, Ignacio and Garc{\'\i}a de Cort{\'a}zar-Atauri, I{\~n}aki and Cook, Benjamin I. and Lacombe, Thierry and Parker, Amber and van Leeuwen, Cornelis and Nicholas, Kimberly A. and Wolkovich, Elizabeth M.},
	title = {Diversity buffers winegrowing regions from climate change losses},
	volume = {117},
	number = {6},
	pages = {2864--2869},
	year = {2020},
	doi = {10.1073/pnas.1906731117},
	publisher = {National Academy of Sciences},
	abstract = {Increasing diversity within crops may be a powerful way to reduce agricultural declines from climate change. As such, it has garnered increasing attention, especially in documenting within-crop diversity through different cultivars or wild relatives. Yet, there are few tests of whether this diversity can mitigate losses with warming. Here, using European (predominantly French) databases to forecast winegrape phenology, we test if shifting cultivars changes predictions of future growing regions. We find that cultivar diversity halved potential losses of winegrowing regions under a 2 {\textdegree}C warming scenario and could reduce losses by a third if warming reaches 4 {\textdegree}C. Thus, diversity{\textemdash}if adopted by growers locally{\textemdash}can mitigate agricultural losses, but its effectiveness will depend on global decisions regarding future emissions.Agrobiodiversity{\textemdash}the variation within agricultural plants, animals, and practices{\textemdash}is often suggested as a way to mitigate the negative impacts of climate change on crops [S. A. Wood et al., Trends Ecol. Evol. 30, 531{\textendash}539 (2015)]. Recently, increasing research and attention has focused on exploiting the intraspecific genetic variation within a crop [Hajjar et al., Agric. Ecosyst. Environ. 123, 261{\textendash}270 (2008)], despite few relevant tests of how this diversity modifies agricultural forecasts. Here, we quantify how intraspecific diversity, via cultivars, changes global projections of growing areas. We focus on a crop that spans diverse climates, has the necessary records, and is clearly impacted by climate change: winegrapes (predominantly Vitis vinifera subspecies vinifera). We draw on long-term French records to extrapolate globally for 11 cultivars (varieties) with high diversity in a key trait for climate change adaptation{\textemdash}phenology. We compared scenarios where growers shift to more climatically suitable cultivars as the climate warms or do not change cultivars. We find that cultivar diversity more than halved projected losses of current winegrowing areas under a 2 {\textdegree}C warming scenario, decreasing areas lost from 56 to 24\%. These benefits are more muted at higher warming scenarios, reducing areas lost by a third at 4 {\textdegree}C (85\% versus 58\%). Our results support the potential of in situ shifting of cultivars to adapt agriculture to climate change{\textemdash}including in major winegrowing regions{\textemdash}as long as efforts to avoid higher warming scenarios are successful.},
	issn = {0027-8424},
	URL = {https://www.pnas.org/content/117/6/2864},
	eprint = {https://www.pnas.org/content/117/6/2864.full.pdf},
	journal = {Proceedings of the National Academy of Sciences},
	file={Biblio/DomainSpecific/ClimateChange/2864.full.pdf}
}



